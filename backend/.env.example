# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/bondify

# JWT Secret Keys
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=30d
ONBOARDING_TOKEN_EXPIRES_IN=7d

# OTP Configuration
OTP_EXPIRES_IN=10
OTP_LENGTH=6

# Email Configuration (Optional - for sending OTP via email)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@bondify.com

# Twilio Configuration (Optional - for sending OTP via SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Cloudinary Configuration (Optional - for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# CORS Configuration
CORS_ORIGIN=*
